#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install ffmpeg"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="http://johnvansickle.com/ffmpeg/releases/ffmpeg-release-64bit-static.tar.xz"
#DOWNLOAD_URL="http://hyperhyper.github.io/grizzly-ffmpeg/ffmpeg.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xvJ

echo "exporting PATH and LIBRARY_PATH" | indent

FFMPEG_PATH="`ls -d /app/vendor/ffmpeg-*`"

PROFILE_PATH="$BUILD_DIR/.profile.d/ffmpeg.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$FFMPEG_PATH:$PATH"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$FFMPEG_PATH/lib:$LD_LIBRARY_PATH"' >> $PROFILE_PATH
